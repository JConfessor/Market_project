<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <Button
        android:id="@+id/btnCadastrarProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Produto"
        android:layout_marginTop="50dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnListarProdutos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listar Produtos"
        android:layout_below="@id/btnCadastrarProduto"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnAlterarProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alterar Produto"
        android:layout_below="@id/btnListarProdutos"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnDeletarProdutos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deletar Produtos"
        android:layout_below="@id/btnAlterarProduto"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>

</RelativeLayout>
