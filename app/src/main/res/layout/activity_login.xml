<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:contextClickable="true"
    app:circularflow_defaultRadius="500dp"
    app:circularflow_radiusInDP="500dp"
    app:layout_constraintCircleRadius="500dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="-288dp"
        android:background="#FBDC6A"
        app:cardBackgroundColor="#FBDC6A"
        app:cardCornerRadius="400dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        tools:ignore="VisualLintBounds">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:allowUndo="false"
            android:fontFamily="sans-serif-light"
            android:text="USUÁRIO"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.185"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="58dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="176dp"
            android:layout_height="65dp"
            android:layout_marginTop="76dp"
            android:allowUndo="false"
            android:fontFamily="sans-serif-medium"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="58dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="217dp"
            android:layout_height="39dp"
            android:layout_marginTop="140dp"
            android:allowUndo="false"
            android:fontFamily="sans-serif-light"
            android:text="Faça login para continuar"
            android:textAlignment="center"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="58dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="217dp"
            android:layout_height="39dp"
            android:layout_marginTop="436dp"
            android:allowUndo="false"
            android:fontFamily="sans-serif-light"
            android:text="Esqueci minha senha"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="58dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:allowUndo="false"
            android:fontFamily="sans-serif-light"
            android:text="SENHA"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.179"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="58dp" />

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_marginTop="220dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:hint="Usuário"
            android:importantForAutofill="no"
            android:padding="10dp"
            android:shadowRadius="5"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,TextFields,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_marginTop="320dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:hint="Senha"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:padding="10dp"
            android:shadowColor="#000000"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnLogin"
            android:text="Entrar"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="388dp"
            android:backgroundTintMode="multiply"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="156dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="85dp"
        app:srcCompat="@drawable/screenshot_39"
        android:importantForAccessibility="no"
        tools:ignore="UnknownId" />


</RelativeLayout>
